{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CoSource Descriptor (PUBLIC)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "canonical_url": { "type": "string" },
    "license": { "type": "string" },
    "gating_tier": { "type": "string", "enum": ["PUBLIC","VaultOnly"] },
    "maintainers": { "type": "array", "items": { "type": "string" } },
    "integrity": {
      "type": "object",
      "additionalProperties": true,
      "properties": { "sha256": { "type": "string" }, "note": { "type": "string" } }
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "claim": { "type": "string" },
          "evidence": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["claim","evidence"]
      }
    },
    "pointers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "rel": { "type": "string" },
          "href": { "type": "string" },
          "note": { "type": "string" }
        },
        "required": ["rel","href"]
      }
    }
  },
  "required": ["id","title","canonical_url","license","gating_tier"]
}
